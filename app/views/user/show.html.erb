<h1><%= "profile for #{@user.username}" %></h1>
<div class="content-inner">
  <div style="float:left;width:50%;vertical-align:top;">
    <dl>
      <dt>User Name:</dt>
      <dd><%= @user.username%></dd>
      <dt>Email:</dt>
      <dd><%= @user.email %></dd>
      <dt>Date Joined:</dt>
      <dd><%= @user.created_at.strftime("%B %d,%Y") %></dd>
      <dt>Last Seen:</dt>
      <dd><%= @user.last_sign_in_at.strftime("%B %d,%Y") unless @user.last_sign_in_at.nil? %></dd>
      <% if user_signed_in? && current_user == @user %>
      <dd>
        <%= link_to "Change Password", edit_user_registration_path(@user) %>
      </dd>
      <% end %>
    </dl>
  </div>
  <div style="float:right;width:50%;height:100%">
    <dl class="content-inner-inner">
      <dt><h1>teams</h1></dt>
      <% @user.teams.each do |team| %>
      <dd><%= link_to "#{team.name} #{team.tag}", team_path(team) %></dd>
      <% end %>
    </dl>
  </div>
  <div class="clear"></div>
</div>
