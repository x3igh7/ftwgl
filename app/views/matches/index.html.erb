<div class="container">
  <h1>All Tournament Matches</h1>
  <table class="table">
    <tr>
      <th>Home Team</th>
      <th>Away Team</th>
      <th>Week</th>
      <th>Match Date</th>
      <th>Results</th>
    </tr>
  <% @matches.each_with_index do |match, x| %>
    <tr id=<%= "match#{x+1}" %>>
      <td>
        <%= match.home_team.team.name %>
      </td>
      <td>
        <%= match.away_team.team.name %>
      </td>
      <td>
        <%= match.week_num %>
      </td>
      <td>
        <%= match.match_date.in_time_zone("EST").strftime("%a, %b %-d, %-r %Z") %>
      </td>
      <td>
        <%= link_to "Results", tournament_match_path(:tournament_id => @tournament.id, :id => match.id) %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
