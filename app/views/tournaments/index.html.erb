<div class="container">
  <h1>Tournaments</h1>

  <table class="table">
    <tr>
      <th>Tournament</th>
      <th>Description</th>
    </tr>
    <% @tournament.each do |tournament| %>
      <tr>
        <td>
          <%= link_to tournament.name, tournament_path(tournament) %>
        </td>
        <td>
          <%= tournament.description %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
